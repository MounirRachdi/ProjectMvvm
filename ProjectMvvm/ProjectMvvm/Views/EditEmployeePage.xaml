<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMvvm.Views.EditEmployeePage">
    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Save "
                     Command="{Binding SaveCommand}" 
                      />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Entry x:Name="id" Keyboard="Numeric" Text="{Binding Id}" IsVisible="False"/>

            <Label Text="Name" FontSize="Small" />
            <Entry x:Name="Name" Text="{Binding Name}" FontSize="Small" />
            <Label Text="Departement" FontSize="Small" />
            <Entry x:Name="departement" Text="{Binding Departement}" FontSize="Small" Margin="0" />


            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>